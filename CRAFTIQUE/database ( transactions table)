CREATE TABLE `transactions` (
 `id` int(11) NOT NULL AUTO_INCREMENT,
 `reference_number` varchar(20) DEFAULT NULL,
 `user_id` int(11) NOT NULL,
 `fee_type` varchar(50) NOT NULL,
 `document_type` varchar(50) DEFAULT NULL,
 `page_count` int(11) DEFAULT 0,
 `quantity` int(11) DEFAULT 1,
 `unit_price` decimal(10,2) NOT NULL,
 `amount` decimal(10,2) NOT NULL,
 `payment_method` enum('gcash','bank_transfer','credit_card','cash') DEFAULT NULL,
 `payment_reference` varchar(100) DEFAULT NULL,
 `payment_status` enum('pending','paid','failed','refunded') DEFAULT 'pending',
 `transaction_date` timestamp NOT NULL DEFAULT current_timestamp(),
 `payment_date` timestamp NULL DEFAULT NULL,
 `user_confirmed` tinyint(1) DEFAULT 0,
 `admin_confirmed` tinyint(1) DEFAULT 0,
 `admin_notes` text DEFAULT NULL,
 `status` enum('pending','user_confirmed','admin_confirmed','completed','cancelled') DEFAULT 'pending',
 `confirmation_date` datetime DEFAULT NULL,
 PRIMARY KEY (`id`),
 KEY `idx_user_id` (`user_id`),
 KEY `idx_transaction_date` (`transaction_date`),
 CONSTRAINT `fk_user_id` FOREIGN KEY (`user_id`) REFERENCES `users` (`usersID`) ON DELETE CASCADE
) ENGINE=InnoDB AUTO_INCREMENT=37 DEFAULT CHARSET=utf8mb4 COLLATE=utf8mb4_general_ci
